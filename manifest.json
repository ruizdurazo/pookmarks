{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "0.2.0",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "permissions": ["bookmarks", "sidePanel", "tabs", "tabGroups", "scripting", "activeTab", "windows", "storage"],
  "host_permissions":[
    "https://*/*",
    "http://*/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "open-pookmarks": {
      "suggested_key": {
        "default": "Shift+Alt+P",
        "mac": "Shift+Alt+P"
      },
      "description": "Open Pookmarks side panel"
    }
  }
}
